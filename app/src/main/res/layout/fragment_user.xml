<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:background="#EFEFEF">

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/icon_bean"/>

    <LinearLayout
        android:id="@+id/layoutDeleteAllWord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ivUser"
        android:paddingHorizontal="15dp"
        android:background="@drawable/user_button_border"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"

            android:text="清空单词记录"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@mipmap/icon_right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMemoryWord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutDeleteAllWord"
        android:paddingHorizontal="15dp"
        android:background="@drawable/user_button_border">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"

            android:text="去记单词"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@mipmap/icon_right"/>

    </LinearLayout>

</RelativeLayout>